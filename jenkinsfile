pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/abhiram2106/java-project-maven-new.git'
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t java-maven-app:v1 .'
            }
        }

        stage('Run Docker Container') {
            steps {
                // Stop and remove container if already running
                sh '''
                  docker stop java-maven-container || true
                  docker rm java-maven-container || true
                  docker run -d -p 8087:8080 --name java-maven-container java-maven-app:v1
                '''
            }
        }
    }
}

